{
  "dashboard": {
    "id": null,
    "uid": "investment-cost-monitoring", 
    "title": "Investment Analysis - Cost Monitoring",
    "description": "Comprehensive cost tracking and budget monitoring dashboard",
    "tags": ["investment-analysis", "cost", "budget", "api-usage"],
    "timezone": "browser",
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "refresh": "5m",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Budget Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "estimated_monthly_cost_usd",
            "legendFormat": "Current Monthly Cost",
            "refId": "A"
          },
          {
            "expr": "estimated_monthly_cost_usd / 50 * 100",
            "legendFormat": "Budget Used %",
            "refId": "B"
          },
          {
            "expr": "50 - estimated_monthly_cost_usd",
            "legendFormat": "Budget Remaining",
            "refId": "C"
          },
          {
            "expr": "cost_saving_mode_active",
            "legendFormat": "Cost Saving Mode",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 40},
                {"color": "red", "value": 45}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Budget Used %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "max", "value": 100},
                {"id": "custom.displayMode", "value": "lcd-gauge"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 80},
                    {"color": "red", "value": 90}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Cost Saving Mode"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "mappings", "value": [
                  {"options": {"0": {"text": "OFF", "color": "green"}}, "type": "value"},
                  {"options": {"1": {"text": "ON", "color": "red"}}, "type": "value"}
                ]}
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Daily Cost Trend",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "increase(daily_api_calls_total[1d])",
            "legendFormat": "Daily API Calls - {{provider}}",
            "refId": "A"
          },
          {
            "expr": "estimated_monthly_cost_usd",
            "legendFormat": "Projected Monthly Cost",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "line"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 40},
                {"color": "red", "value": 45}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Monthly Cost.*"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "custom.axisPlacement", "value": "right"},
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "API Usage by Provider",
        "type": "piechart",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "increase(daily_api_calls_total[1d])",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            },
            "unit": "short",
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "right", "values": ["value", "percent"]},
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 4,
        "title": "API Quota Utilization",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "api_quota_usage_percent",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 5,
        "title": "API Calls Remaining",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 17},
        "targets": [
          {
            "expr": "api_calls_remaining",
            "legendFormat": "{{provider}} - {{limit_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 1000}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 6,
        "title": "Cost per Recommendation",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 17},
        "targets": [
          {
            "expr": "api_cost_per_recommendation_cents",
            "legendFormat": "Cost/Recommendation - {{recommendation_type}}",
            "refId": "A"
          },
          {
            "expr": "rate(recommendations_generated_total[1h]) * 3600",
            "legendFormat": "Recommendations/Hour - {{type}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Cost/Recommendation.*"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "custom.transform", "value": "divide"},
                {"id": "custom.axisPlacement", "value": "left"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*Recommendations/Hour.*"},
              "properties": [
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Historical Cost Analysis",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "increase(daily_api_calls_total[7d])",
            "legendFormat": "{{provider}}",
            "refId": "A",
            "format": "table",
            "instant": false,
            "range": true
          },
          {
            "expr": "avg_over_time(estimated_monthly_cost_usd[7d])",
            "legendFormat": "Weekly Average",
            "refId": "B",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "provider": "Provider",
                "Value #A": "7-Day API Calls",
                "Value #B": "Weekly Avg Cost"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Weekly Avg Cost"},
              "properties": [
                {"id": "unit", "value": "currencyUSD"},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "green", "value": null},
                    {"color": "yellow", "value": 35},
                    {"color": "red", "value": 45}
                  ]
                }}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Emergency Mode Activations",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "cost_saving_mode_active",
            "legendFormat": "Cost Saving Mode Active",
            "refId": "A"
          },
          {
            "expr": "increase(budget_alert_notifications_total[1h])",
            "legendFormat": "Budget Alert Notifications/Hour",
            "refId": "B"
          },
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Ratio % (Cost Optimization)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.3,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "always",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "line"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Cache Hit.*"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            },
            {
              "matcher": {"id": "byRegexp", "options": ".*Cost Saving Mode.*"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}},
                {"id": "custom.fillOpacity", "value": 20}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "provider",
          "label": "API Provider",
          "type": "query",
          "query": "label_values(daily_api_calls_total, provider)",
          "datasource": "prometheus",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "allValue": ".*",
          "refresh": 1
        },
        {
          "name": "time_range",
          "label": "Analysis Period",
          "type": "custom",
          "options": [
            {"text": "Last 24 Hours", "value": "now-24h"},
            {"text": "Last 7 Days", "value": "now-7d"},
            {"text": "Last 30 Days", "value": "now-30d"},
            {"text": "Month to Date", "value": "now/M"}
          ],
          "current": {
            "selected": false,
            "text": "Last 30 Days",
            "value": "now-30d"
          },
          "hide": 0
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Budget.*|.*Cost.*\"}",
          "iconColor": "red",
          "name": "Budget Alerts",
          "titleFormat": "{{alertname}}",
          "tagKeys": "severity,provider"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "changes(cost_saving_mode_active[1h]) > 0",
          "iconColor": "orange",
          "name": "Cost Saving Mode Changes",
          "titleFormat": "Cost Saving Mode Toggle"
        }
      ]
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 1,
    "links": [
      {
        "asDropdown": false,
        "icon": "external link",
        "includeVars": true,
        "keepTime": true,
        "tags": ["investment-analysis"],
        "targetBlank": true,
        "title": "Business Metrics Dashboard",
        "tooltip": "",
        "type": "link", 
        "url": "/d/investment-business-metrics"
      },
      {
        "icon": "doc",
        "tags": [],
        "targetBlank": true,
        "title": "Cost Optimization Guide",
        "tooltip": "Learn about cost optimization strategies",
        "type": "link",
        "url": "https://docs.company.com/cost-optimization"
      }
    ],
    "liveNow": false,
    "panels": [],
    "style": "dark",
    "timepicker": {
      "refresh_intervals": ["5m", "10m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "timezone": "",
    "weekStart": ""
  }
}