{
  "dashboard": {
    "id": null,
    "uid": "investment-business-metrics",
    "title": "Investment Analysis - Business Metrics",
    "description": "Business performance and financial metrics dashboard",
    "tags": ["investment-analysis", "business", "financial", "trading"],
    "timezone": "browser",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m",
    "schemaVersion": 30,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Trading Performance Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "recommendation_accuracy_7day_percent",
            "legendFormat": "7-Day Accuracy % - {{model}}",
            "refId": "A"
          },
          {
            "expr": "portfolio_sharpe_ratio",
            "legendFormat": "Sharpe Ratio - Portfolio {{portfolio_id}}",
            "refId": "B"
          },
          {
            "expr": "strategy_hit_rate_percent",
            "legendFormat": "Hit Rate % - {{strategy_name}}",
            "refId": "C"
          },
          {
            "expr": "portfolio_cumulative_return_percent{period=\"30d\"}",
            "legendFormat": "30-Day Return % - Portfolio {{portfolio_id}}",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 70}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Sharpe.*"},
              "properties": [
                {"id": "unit", "value": "short"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "red", "value": null},
                    {"color": "yellow", "value": 0.5},
                    {"color": "green", "value": 1.0}
                  ]
                }}
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Portfolio Performance",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "portfolio_total_value_usd",
            "legendFormat": "Portfolio Value - {{portfolio_id}}",
            "refId": "A"
          },
          {
            "expr": "portfolio_daily_return_percent",
            "legendFormat": "Daily Return % - {{portfolio_id}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "currencyUSD"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Daily Return.*"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 3,
        "title": "Risk Metrics",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "portfolio_volatility_annualized",
            "legendFormat": "Volatility - {{portfolio_id}}",
            "refId": "A"
          },
          {
            "expr": "portfolio_max_drawdown_percent",
            "legendFormat": "Max Drawdown % - {{portfolio_id}}",
            "refId": "B"
          },
          {
            "expr": "portfolio_var_95_percent",
            "legendFormat": "VaR 95% - {{portfolio_id}}",
            "refId": "C"
          },
          {
            "expr": "concentration_risk",
            "legendFormat": "Concentration Risk - {{portfolio_id}}",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "line"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.15},
                {"color": "red", "value": 0.25}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Drawdown.*|.*VaR.*"},
              "properties": [{"id": "unit", "value": "percent"}]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "none"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        }
      },
      {
        "id": 4,
        "title": "Recommendation Accuracy by Model",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "recommendation_accuracy_1day_percent",
            "legendFormat": "1-Day - {{model}}",
            "refId": "A"
          },
          {
            "expr": "recommendation_accuracy_7day_percent",
            "legendFormat": "7-Day - {{model}}",
            "refId": "B"
          },
          {
            "expr": "recommendation_accuracy_30day_percent",
            "legendFormat": "30-Day - {{model}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 70}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        }
      },
      {
        "id": 5,
        "title": "Stock Processing Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 17},
        "targets": [
          {
            "expr": "stocks_analyzed_per_hour",
            "legendFormat": "Stocks/Hour - {{tier}}",
            "refId": "A"
          },
          {
            "expr": "rate(stocks_processed_total[1h])",
            "legendFormat": "Processing Rate - {{tier}}",
            "refId": "B"
          },
          {
            "expr": "data_quality_score",
            "legendFormat": "Quality Score - {{data_type}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "auto",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Quality Score.*"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      },
      {
        "id": 6,
        "title": "Market Regime & Indicators",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 17},
        "targets": [
          {
            "expr": "market_regime_indicator",
            "legendFormat": "Market Regime - {{market}}",
            "refId": "A"
          },
          {
            "expr": "market_volatility_index",
            "legendFormat": "Volatility Index - {{market}}",
            "refId": "B"
          },
          {
            "expr": "market_breadth_indicator",
            "legendFormat": "Breadth - {{indicator_type}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {"options": {"0": {"text": "BEAR", "color": "red"}}, "type": "value"},
              {"options": {"0.5": {"text": "NEUTRAL", "color": "yellow"}}, "type": "value"},
              {"options": {"1": {"text": "BULL", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.3},
                {"color": "green", "value": 0.7}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Volatility.*|.*Breadth.*"},
              "properties": [
                {"id": "mappings", "value": []},
                {"id": "unit", "value": "percent"}
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 7,
        "title": "Strategy Performance Comparison",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "strategy_hit_rate_percent",
            "legendFormat": "{{strategy_name}}",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "strategy_average_return_percent", 
            "legendFormat": "{{strategy_name}}",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "strategy_risk_adjusted_return",
            "legendFormat": "{{strategy_name}}",
            "refId": "C", 
            "format": "table",
            "instant": true
          },
          {
            "expr": "strategy_win_loss_ratio",
            "legendFormat": "{{strategy_name}}",
            "refId": "D",
            "format": "table", 
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "Time": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "strategy_name": "Strategy",
                "Value #A": "Hit Rate %",
                "Value #B": "Avg Return %", 
                "Value #C": "Sharpe Ratio",
                "Value #D": "Win/Loss Ratio"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": false
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Hit Rate %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.displayMode", "value": "color-background"},
                {"id": "thresholds", "value": {
                  "steps": [
                    {"color": "red", "value": null},
                    {"color": "yellow", "value": 50},
                    {"color": "green", "value": 70}
                  ]
                }}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Avg Return %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.displayMode", "value": "color-background"}
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Trading Costs & Efficiency",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "rate(trading_cost_total_usd[1h])",
            "legendFormat": "Trading Cost $/Hour - {{cost_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(trade_execution_slippage_percent_bucket[1h]))",
            "legendFormat": "P95 Slippage % - {{market_cap_tier}}",
            "refId": "B"
          },
          {
            "expr": "order_fill_rate_percent",
            "legendFormat": "Fill Rate % - {{order_type}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 0.1,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "axisColorMode": "text",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            },
            "unit": "currencyUSD"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": ".*Slippage.*|.*Fill Rate.*"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"}
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "portfolio",
          "label": "Portfolio",
          "type": "query",
          "query": "label_values(portfolio_total_value_usd, portfolio_id)",
          "datasource": "prometheus",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "allValue": ".*",
          "refresh": 1
        },
        {
          "name": "strategy",
          "label": "Strategy",
          "type": "query", 
          "query": "label_values(strategy_hit_rate_percent, strategy_name)",
          "datasource": "prometheus",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "allValue": ".*",
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"BudgetExceeded\"}",
          "iconColor": "red",
          "name": "Budget Alerts",
          "titleFormat": "Budget Alert",
          "tagKeys": "severity"
        }
      ]
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 1,
    "links": [
      {
        "asDropdown": false,
        "icon": "external link", 
        "includeVars": true,
