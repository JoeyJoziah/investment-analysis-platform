{
  "synchronization_config": {
    "version": "1.0.0",
    "created": "2025-08-19T00:00:00Z",
    "sync_strategy": "incremental",
    "consistency_level": "strong",
    "conflict_resolution": "last_write_wins",
    "validation_enabled": true
  },
  "watch_patterns": {
    "critical_files": [
      "*.py",
      "*.js",
      "*.ts",
      "*.jsx",
      "*.tsx",
      "*.yml",
      "*.yaml",
      "*.json",
      "*.toml",
      "*.txt",
      "*.md",
      "*.sh",
      "Dockerfile*",
      ".env*"
    ],
    "exclude_patterns": [
      "__pycache__/",
      "node_modules/",
      ".git/",
      "*.pyc",
      "*.log",
      "htmlcov/",
      "coverage.xml",
      ".pytest_cache/",
      "dist/",
      "build/",
      "*.egg-info/"
    ],
    "directories": {
      "backend/": {
        "priority": "high",
        "sync_frequency": "immediate",
        "watch_depth": 3
      },
      "frontend/": {
        "priority": "high", 
        "sync_frequency": "immediate",
        "watch_depth": 3
      },
      "data_pipelines/": {
        "priority": "medium",
        "sync_frequency": "batch",
        "watch_depth": 2
      },
      "infrastructure/": {
        "priority": "high",
        "sync_frequency": "immediate",
        "watch_depth": 2
      },
      "scripts/": {
        "priority": "medium",
        "sync_frequency": "batch",
        "watch_depth": 2
      },
      "config/": {
        "priority": "high",
        "sync_frequency": "immediate",
        "watch_depth": 1
      }
    }
  },
  "sync_triggers": {
    "file_change": {
      "enabled": true,
      "debounce_ms": 1000,
      "batch_size": 50
    },
    "git_commit": {
      "enabled": true,
      "post_commit_hook": true,
      "branch_filters": ["main", "develop", "feature/*"]
    },
    "deployment_event": {
      "enabled": true,
      "environments": ["dev", "staging", "prod"]
    },
    "scheduled": {
      "enabled": true,
      "cron": "0 */4 * * *",
      "full_sync": "0 2 * * *"
    },
    "agent_request": {
      "enabled": true,
      "priority": "high",
      "timeout_ms": 5000
    }
  },
  "consistency_checks": {
    "file_integrity": {
      "enabled": true,
      "checksum_algorithm": "sha256",
      "verification_frequency": "on_sync"
    },
    "dependency_validation": {
      "enabled": true,
      "check_requirements": true,
      "check_package_json": true,
      "check_docker_images": true
    },
    "configuration_validation": {
      "enabled": true,
      "validate_env_vars": true,
      "validate_yaml_syntax": true,
      "validate_json_schema": true
    },
    "database_schema": {
      "enabled": true,
      "check_migrations": true,
      "validate_models": true
    }
  },
  "conflict_resolution": {
    "strategy": "merge_with_preference",
    "preference_order": [
      "agent_updates",
      "user_commits",
      "automated_changes"
    ],
    "backup_conflicts": true,
    "manual_resolution_required": [
      "schema_conflicts",
      "configuration_conflicts",
      "api_breaking_changes"
    ]
  },
  "performance_optimization": {
    "cache_sync_results": true,
    "compress_large_contexts": true,
    "parallel_sync_workers": 4,
    "batch_sync_threshold": 100,
    "incremental_sync_enabled": true,
    "delta_compression": true
  },
  "storage_backend": {
    "primary": "file_system",
    "backup": "database",
    "compression": {
      "enabled": true,
      "algorithm": "gzip",
      "threshold_bytes": 1024
    },
    "encryption": {
      "enabled": false,
      "algorithm": "AES-256-GCM"
    }
  },
  "monitoring": {
    "metrics_enabled": true,
    "log_sync_operations": true,
    "performance_tracking": true,
    "error_tracking": true,
    "metrics": {
      "sync_duration": "histogram",
      "sync_frequency": "counter",
      "conflict_count": "counter",
      "cache_hit_rate": "gauge",
      "context_size": "histogram"
    }
  },
  "notification_channels": {
    "sync_completion": {
      "enabled": true,
      "channels": ["log", "metrics"]
    },
    "sync_errors": {
      "enabled": true,
      "channels": ["log", "alert"]
    },
    "conflict_detected": {
      "enabled": true,
      "channels": ["log", "notification"]
    }
  },
  "data_retention": {
    "sync_history": "30 days",
    "conflict_backups": "7 days", 
    "performance_metrics": "90 days",
    "error_logs": "30 days"
  },
  "agent_specific_configs": {
    "agent_organizer": {
      "sync_priority": "high",
      "context_types": ["project_structure", "component_metadata"],
      "update_frequency": "immediate"
    },
    "multi_agent_coordinator": {
      "sync_priority": "critical",
      "context_types": ["system_state", "agent_status"],
      "update_frequency": "real_time"
    },
    "workflow_orchestrator": {
      "sync_priority": "high",
      "context_types": ["workflow_definitions", "execution_logs"],
      "update_frequency": "batch"
    },
    "task_distributor": {
      "sync_priority": "medium",
      "context_types": ["workload_metrics", "resource_allocation"],
      "update_frequency": "periodic"
    },
    "performance_monitor": {
      "sync_priority": "high",
      "context_types": ["performance_metrics", "alerts"],
      "update_frequency": "streaming"
    },
    "error_coordinator": {
      "sync_priority": "critical",
      "context_types": ["error_contexts", "recovery_procedures"],
      "update_frequency": "immediate"
    },
    "knowledge_synthesizer": {
      "sync_priority": "medium",
      "context_types": ["insights", "knowledge_graphs"],
      "update_frequency": "batch"
    }
  },
  "api_endpoints": {
    "sync_status": "/context/sync/status",
    "trigger_sync": "/context/sync/trigger",
    "get_context": "/context/get/{context_id}",
    "update_context": "/context/update/{context_id}",
    "list_contexts": "/context/list",
    "search_contexts": "/context/search",
    "metrics": "/context/metrics"
  },
  "backup_and_recovery": {
    "automatic_backups": true,
    "backup_frequency": "daily",
    "backup_retention": "30 days",
    "point_in_time_recovery": true,
    "disaster_recovery": {
      "enabled": true,
      "rto_minutes": 15,
      "rpo_minutes": 5
    }
  }
}